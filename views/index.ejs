<%- include('partials/header', {userId: userId, name: name}) %>
<div class="container">
	<h1>My Blog</h1>
	<% if (userId) { %>
	<a href="/new">Create New Post</a>
	<% } %> <% if (posts.length === 0) { %>
	<p>No posts yet.</p>
	<% } else { %> <% posts.forEach(post => { %>
	<div class="post">
		<h2><%= post.title %></h2>
		<p>
			<strong>By:</strong> <%= post.creator_name %> | <%= new
			Date(post.date_created).toLocaleString() %>
		</p>
		<p><%= post.body %></p>
		<% if (userId && userId === post.creator_user_id) { %>
		<a href="/edit/<%= post.blog_id %>">Edit</a> |
		<a href="/delete/<%= post.blog_id %>">Delete</a>
		<% } %>
		<hr />
	</div>
	<% }) %> <% } %>
</div>
<%- include('partials/footer') %>
